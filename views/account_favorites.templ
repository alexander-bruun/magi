package views

import (
    "fmt"
    "github.com/alexander-bruun/magi/models"
)

templ AccountFavorites(mangas []models.Manga, currentPage int, totalPages int) {
    @PageTitle(fmt.Sprintf("Your Favorites - page #%d", currentPage))
    @Breadcrumb([]BreadcrumbItem{
        { Label: "Home", Href: "/" },
        { Label: "Account", Href: "/account" },
        { Label: "Favorites", Href: "/account/favorites" },
    })

    <h2 class="uk-heading-line uk-h2 uk-card-title uk-text-center"><span>Your Favorites</span></h2>
    if len(mangas) > 0 {
    @MangaGrid(mangas, 300, 450, true)

        <div class="flex justify-center items-center py-8">
            @Pagination(totalPages, currentPage)
        </div>
    } else {
        @EmptyState("You have no favorites yet.")
    }
}
