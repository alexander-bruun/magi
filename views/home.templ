					for _, highlight := range highlights {
						{{ score, _, _, _ := models.GetMediaVotes(highlight.Media.Slug) }}
						<li class="highlight-slide">
							<!-- Background Image -->
							<div class="highlight-bg">
								<img alt="" fetchpriority="high" loading="eager" decoding="async" src={ strings.Replace(highlight.Media.CoverArtURL, ".webp", "_small.webp", 1) } />
							</div>
							
