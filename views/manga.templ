	<!-- Edit Poster Modal for Moderators/Admins -->
	<div id="edit-poster-modal" uk-modal role="dialog" aria-labelledby="edit-poster-modal-title" aria-modal="true">
		<div class="uk-modal-body uk-modal-dialog hide-scrollbar reader-modal-body">
			<h2 id="edit-poster-modal-title" class="uk-modal-title mb-3">Edit Poster</h2>
			<p class="uk-text-muted mb-6">
				Upload a new poster image or select one from your media files.
			</p>
			<!-- Tabs for different poster edit modes -->
			<ul class="uk-tab" uk-tab="swiping: false">
				<li><a href="#">Upload</a></li>
				<li hx-on:click="if (!document.getElementById('poster-selector-content').hasAttribute('data-loaded')) { htmx.trigger('#poster-selector-content', 'customLoad'); document.getElementById('poster-selector-content').setAttribute('data-loaded', 'true'); }"><a href="#">Select</a></li>
				<li><a href="#">Metadata</a></li>
			</ul>
			<ul class="uk-switcher uk-margin">
				<!-- Upload Tab -->
				<li>
					<div class="uk-margin">
						<p class="uk-text-muted">Upload a new poster image:</p>
						<form
							method="post"
							enctype="multipart/form-data"
							hx-post={ fmt.Sprintf("/series/%s/poster/set", media.Slug) }
							hx-target="#poster-selector-content"
							hx-swap="outerHTML"
							hx-encoding="multipart/form-data"
							
						>
							<div class="uk-margin">
								<input type="file" name="poster" accept="image/*" required class="uk-input"/>
							</div>
							<div class="uk-margin">
								<button type="submit" class="uk-btn uk-btn-primary">Upload Poster</button>
							</div>
						</form>
					</div>
				</li>
				<!-- Select Tab -->
				<li>
					<div class="uk-margin">
						<p class="uk-text-muted">Select a poster image from your media files:</p>
						<div
							id="poster-selector-content"
							if userRole == "moderator" || userRole == "admin" {
								hx-get={ fmt.Sprintf("/series/%s/poster/chapters", media.Slug) }
								hx-trigger="customLoad"
								hx-target="this"
								hx-swap="outerHTML"
							}
						>
							<p class="uk-text-muted">Loading chapter images...</p>
						</div>
					</div>
				</li>
				<!-- Metadata Tab -->
				<li>
					<div class="uk-margin">
						<p class="uk-text-muted">Select a poster image from metadata providers:</p>
						<div
							id="poster-metadata-content"
							hx-get={ fmt.Sprintf("/series/%s/poster/metadata", media.Slug) }
							hx-trigger="customLoad"
							hx-target="this"
							hx-swap="outerHTML"
						>
							<p class="uk-text-muted">Loading cover images...</p>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
	<!-- Collections Modal -->
	<div id="collections-modal" uk-modal>
		<div class="uk-modal-dialog uk-modal-body">
			<div id="collections-modal-content"></div>
		</div>
	</div>

	<script>
		function filterChapters() {
			const searchInput = document.getElementById('chapter-search');
			const filter = searchInput.value.toLowerCase();
			const chapterItems = document.querySelectorAll('#chapters-container ul.uk-accordion li');
			const countElement = document.getElementById('chapter-count');
			const unit = countElement ? countElement.getAttribute('data-unit') : 'chapter';
			let visibleCount = 0;

			chapterItems.forEach(item => {
				const chapterTitle = item.querySelector('.uk-accordion-title');
				if (chapterTitle) {
					const text = chapterTitle.textContent.toLowerCase();
					if (text.includes(filter)) {
						item.style.display = '';
						visibleCount++;
					} else {
						item.style.display = 'none';
					}
				}
			});

			// Update the count display
			if (countElement) {
				const totalCount = chapterItems.length;
				const totalUnit = totalCount === 1 ? unit : unit + 's';
				const visibleUnit = visibleCount === 1 ? unit : unit + 's';
				if (visibleCount === totalCount) {
					countElement.textContent = `${totalCount} ${totalUnit}`;
				} else {
					countElement.textContent = `${visibleCount} of ${totalCount} ${visibleUnit}`;
				}
			}
		}

		function toggleChapterOrder() {
			const container = document.querySelector('#chapters-container ul.uk-accordion');
			const containerDiv = document.getElementById('chapters-container');
			if (!container || !containerDiv) return;

			const items = Array.from(container.children);
			items.reverse();
			items.forEach(item => container.appendChild(item));

			// Toggle the reverse state
			const isReversed = containerDiv.getAttribute('data-reverse') === 'true';
			containerDiv.setAttribute('data-reverse', (!isReversed).toString());

			// Update all reverse buttons
			const buttons = ['reverse-btn', 'reverse-btn-desktop', 'reverse-btn-large'];
			buttons.forEach(btnId => {
				const btn = document.getElementById(btnId);
				if (btn) {
					const icon = btn.querySelector('uk-icon');
					const span = btn.querySelector('span');

					if (isReversed) {
						// Was reversed (descending), now ascending
						icon.setAttribute('icon', 'arrow-down');
						span.textContent = 'Descending';
						btn.setAttribute('title', 'Sort chapters in descending order');
					} else {
						// Was ascending, now descending
						icon.setAttribute('icon', 'arrow-up');
						span.textContent = 'Ascending';
						btn.setAttribute('title', 'Sort chapters in ascending order');
					}
				}
			});
		}

		// Load poster metadata content when edit poster modal is opened
		UIkit.util.on('#edit-poster-modal', 'show', function() {
			const metadataContent = document.getElementById('poster-metadata-content');
			if (metadataContent && !metadataContent.hasAttribute('data-loaded')) {
				htmx.trigger(metadataContent, 'customLoad');
				metadataContent.setAttribute('data-loaded', 'true');
			}
		});
	</script>
}

